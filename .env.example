# -----------------------------------------------------------------------------
# Bloblet Public Mirror - Environment Example
# -----------------------------------------------------------------------------
# Copy to .env.local (or .env) and fill in real values before running locally.
# Never commit populated env files.
# -----------------------------------------------------------------------------

# --- Supabase (required for core gameplay + auth) ---------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_public_anon_key
SUPABASE_SERVICE_KEY=your_service_role_key
SUPABASE_JWT_SECRET=your_jwt_secret

# --- Session & security -----------------------------------------------------
SESSION_SECRET=replace_with_32+_byte_secret
CRON_SECRET=optional_for_internal_jobs
INTERNAL_API_SECRET=optional_shared_secret
ENABLE_TEST_PAGES=false

# --- Solana / Reward Points -------------------------------------------------
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_key
NEXT_PUBLIC_SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your_key
SOLANA_TOKEN_MINT=your_token_mint
NEXT_PUBLIC_SOLANA_TOKEN_MINT=your_token_mint
SOLANA_TOKEN_DECIMALS=6
SOLANA_TREASURY_PUBLIC_KEY=your_treasury_public_key
NEXT_PUBLIC_SOLANA_TREASURY_PUBLIC_KEY=your_treasury_public_key
SOLANA_TREASURY_SECRET_JSON=[your_treasury_secret_json]
SOLANA_TREASURY_ATA=optional_treasury_ata
REWARD_DECIMALS=2

# --- Economy / Gameplay tuning ---------------------------------------------
ECONOMY_MODE=sandbox
NEXT_PUBLIC_ECONOMY_MODE=sandbox
CARE_CHARGE_COST_POINTS=5
CARE_COOLDOWN_MIN=15
CARE_BOOSTER_WINDOW_MIN=15
GATE_MIN_TOKENS=300

# --- Storage (optional for custom avatars / sprites) ------------------------
STORAGE_PROVIDER=r2
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_PERSIST=bloblet-user-generations
R2_BUCKET_TEMP=bloblet-temp-uploads
R2_PUBLIC_BASE_URL=https://public-bucket.r2.dev

# --- Upstash (optional rate limit + caching) -------------------------------
UPSTASH_REDIS_REST_URL=https://your-upstash-url
UPSTASH_REDIS_REST_TOKEN=your_upstash_token
UPSTASH_RATE_LIMIT_MAX=999
UPSTASH_RATE_LIMIT_WINDOW=60s

# --- AI features (optional help/chat) --------------------------------------
OPENAI_API_KEY=your_openai_api_key
OPENAI_MAX_OUTPUT_TOKENS=120

# --- Vercel (optional deploy helper) ---------------------------------------
VERCEL_TOKEN=your_vercel_token
